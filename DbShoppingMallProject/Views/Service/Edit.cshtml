
@model DbShoppingMallProject.Data.Services

@{
    ViewData["Title"] = "Create";
}

<h2>Edit Service</h2>


<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-controller="Service">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea name="Description" class="ckeditor" id="Description"></textarea>

            </div>
            <div class="form-group">
                <label asp-for="StallId" class="control-label"></label>
                <select asp-for="StallId" class="form-control" asp-items="ViewBag.stallId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace(".ckeditor");
    </script>
}